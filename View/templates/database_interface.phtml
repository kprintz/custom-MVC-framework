<h1 class="header">Edit Databse</h1>

<div class="edit-window-container">

    <form data-form="get-data" action="/Calculation/Index/" method="POST" class="edit-window">
        <div class="buttons__edit-window__action">
            <label for="filter-options">What do you want to do</label>
            <select name="filter" id="filter-options">
                <option data-show-val="" value="">Select...</option>
                <option data-show-val="add" data-method="add" value="add">Add Data</option>
                <option data-show-val="update" data-method="update" value="updateData">Update Data</option>
                <option data-show-val="delete" data-method="remove" value="deleteData">Delete Data</option>
                <option data-show-val="filter" data-method="getFilterData" value="getFilterData">Filter Data</option>
                <option data-show-val="all" data-method="getAllData" value="getAllData">View All Data</option>
            </select>
        </div>

        <div class="edit-window__options">

            <div class="columnHeader">
                <label for="columnName">Column Name
                    <select name="columnName" data-visible-for="update,delete,filter">
                        <option value="ip">IP</option>
                        <option value="date">Date</option>
                        <option value="calculation">Calculation</option>
                    </select>
                </label>
            </div>

            <div class="edit-window__options__view">
                <div class="view_delete">
                    <label for="calculation">Data Point
                        <input type="text" name="calculation" data-visible-for="add,delete,filter">
                    </label>
                </div>

            </div>

            <div class="edit-window__options__update">
                <label for="currentValue">Current Value
                    <input type="text" name="currentValue" data-visible-for="update">
                </label>

                <label for="newValue">New Value
                    <input type="text" name="newValue" data-visible-for="update">
                </label>
            </div>
        </div>
        <input type="submit" value="Submit">
        <div class="insert-message"></div>
    </form>

    <div class="database-display">
        <table>
            <tr class="table-headers">
                <!-- todo change this so it is pulled from the column names -->
                <th>ID</th>
                <th>IP Address</th>
                <th>Date</th>
                <th>Calculation</th>
            </tr>
        </table>
    </div>
</div>
