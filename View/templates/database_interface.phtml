<h1 class="header">Edit Databse</h1>

<div class="edit-window-container">

    <form data-form="get-data" action="/Calculation/Index/" method="POST" class="edit-window">
        <div class="buttons__edit-window__action">
            <h3 class="edit-window__header">What do you want to do</h3>
            <select name="filter" id="filter-options">
                <option data-show-val="" value="">Select...</option>
                <option data-show-val="filter" data-method="getData" value="getData">Filter Data</option>
                <option data-show-val="all" data-method="getAllData" value="getAllData">View All Data</option>
                <option data-show-val="update" data-method="update" value="updateData">Update Data</option>
                <option data-show-val="delete" data-method="remove" value="deleteData">Delete Data</option>
            </select>
        </div>

        <div class="edit-window__options">

            <div class="columnHeader">
                <h3 class="edit-window__header">Column Name</h3>
                <select name="columnName" data-visible-for="filter,update,delete">
                    <option value="ip">IP</option>
                    <option value="date">Date</option>
                    <option value="calculation">Calculation</option>
                </select>
            </div>

            <div class="edit-window__options__view">
                <div class="view_delete">
                    <h3 class="edit-window__header">Data Point</h3>
                    <input type="text" name="inputData" data-visible-for="filter,delete"><br>
                </div>

            </div>

            <div class="edit-window__options__update">
                <h3 class="edit-window__header">Current Value</h3>
                <input type="text" name="currentValue" data-visible-for="update"><br>

                <h3 class="edit-window__header">New Value</h3>
                <input type="text" name="newValue" data-visible-for="update"><br>
            </div>
        </div>
        <input type="submit" value="Submit">
        <div class="insert-message"></div>
    </form>

    <div class="database-display">
        <table>
            <tr>
                <th>ID</th>
                <th>IP Address</th>
                <th>Date</th>
                <th>Calculation</th>
            </tr>

            <div class="insert-data"></div>
    </div>
</div>
